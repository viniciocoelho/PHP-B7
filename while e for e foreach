<?php 
$numero = 0;

while($numero < 10) {
    echo "N: " .$numero. "<br/>";

    $numero += 1;
}

=================================================

for($numero = 0; $numero < 10; $numero += 1) {
    echo "N: " .$numero. "<br/>";
}

=================================================

<?php 

$ingredientes = [
    'acucar',
    'ovo',
    'trigo',
    'fermento'
];

foreach($ingredientes as $chave => $valor) {
    echo "item ".$chave.": ".$valor."<br/>";
}



?>

<?php 

$ingredientes = [
    'acucar',
    'ovo',
    'trigo',
    'fermento'
];

foreach($ingredientes as $ingredientes) {
    echo "item: ".$ingredientes."<br/>";
}


$ingredientes = [
    'acucar',
    'ovo',
    'trigo',
    'fermento'
];

echo '<h2>Ingredientes</h2>';

echo "<ul>";
foreach($ingredientes as $ingredientes) {
    echo '<li>'.$ingredientes.'</li>';
};
echo "</ul>";